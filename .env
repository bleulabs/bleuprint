# Environment Configuration Template
# Copy this file to .env and customize with your personal information
# The .env file is automatically ignored by Git for security

# Git Configuration
GIT_USER_NAME="Test User"
GIT_USER_EMAIL="test@example.com"

# System Configuration
SYSTEM_HOSTNAME="testhost"
HOME_MANAGER_USERNAME="testuser"

# Optional: Modern Tools (true/false)
ENABLE_MODERN_TOOLS="true"

# Optional: Git Signing (leave empty to disable)
GPG_SIGNING_KEY=""

# Optional: SSH Configuration
SSH_KEY_TYPE="ed25519"

# Optional: Development Preferences
DEFAULT_SHELL="zsh"
DEFAULT_EDITOR="nvim"

# Optional: Homebrew Apps (comma-separated list to exclude)
EXCLUDE_HOMEBREW_APPS=""

# Security Settings
# Set to "true" to enable Git security hooks by default
ENABLE_GIT_HOOKS="true"

# Repository Settings
# Set to "true" if this is a private repository (disables some security checks)
IS_PRIVATE_REPO="false"
